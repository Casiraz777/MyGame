<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF0000" /> <!-- Цвет фона кнопки при нажатии -->
            <stroke android:width="3px" android:color="#000000" /> <!-- Цвет границы кнопки при нажатии -->
            <corners android:radius="3px" /> <!-- Радиус скругления углов кнопки -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Обычный цвет фона кнопки -->
            <stroke android:width="3px" android:color="#000000" /> <!-- Обычная граница кнопки -->
            <corners android:radius="3px" /> <!-- Радиус скругления углов кнопки -->
        </shape>
    </item>
</selector>